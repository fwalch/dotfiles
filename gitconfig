  editor = nvim
  autocrlf = input
[apply]
  whitespace = nowarn
[format]
  pretty = %C(yellow)%h%Creset %s %C(red)(%cr)%Creset
[branch]
  autosetuprebase = always
[push]
  default = simple
[diff]
  tool = vimdiff
[merge]
  tool = vimdiff
[mergetool "vimdiff"]
  prompt = false
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[grep]
  patterntype = perl
